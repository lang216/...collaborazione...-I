{
    "audio": {
        "sr": 44100,
        "mono": true,
        "hop_length": 1024,
        "n_fft": 1024
    },
    "features": {
        "n_mfcc": 13
    },
    "segmentation": {
        "min_duration": 0.8,
        "max_duration": 5.0,
        "k_clusters": 5
    },
    "freesound": {
        "duration_multiplier": 1.2,
        "max_parallel_searches": 4,
        "min_results_per_file": 3,
        "output_subfolder_format": "{feature_type}/{piece_name}/cluster_{cluster_id}"
    },
    "paths": {
        "input_dir": "audio/Audio_Raw_Materials",
        "segments_dir": "audio/Segmented_Audio",
        "filtered_segments_dir": "audio/Segmented_Audio_Filtered",
        "filtered_segments_dir_test": "tests/Filtered_Segments_Dir_Test",
        "freesound_dir": "audio/Freesound_Matches",
        "freesound_dir_test": "tests/Freesound_Matches_Test",
        "chord_output_dir": "audio/Chord_Outputs"
    },
    "chord_builder": {
        "chord_input_dir": "audio/Audio_Chord_Materials",
        "default_bit_depth": 16,
        "generate_metadata": true,
        "metadata_format": "txt",
        "normalize_output": true
    }
}
